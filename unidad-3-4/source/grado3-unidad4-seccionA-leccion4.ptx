      <image source="tikz-file-151100">
      <description>2 groups of 7 dots.</description>
      </image>
      <p>B</p>
      <image source="tikz-file-151101">
      <description>Groups of dots.</description>
      </image>
    </sidebyside>
      <p>expresiones</p>
      <sidebyside>
      <p>C</p>
      <p><me>6\div 2</me></p>
      <p>D</p>
